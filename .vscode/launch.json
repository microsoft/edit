{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug (Windows)",
            "preLaunchTask": "rust: cargo build",
            "type": "cppvsdbg",
            "request": "launch",
            "console": "externalTerminal",
            "program": "${workspaceFolder}/target/debug/edit",
            "cwd": "${workspaceFolder}",
            "args": [
                "assets/highlighting-tests/bash.sh",
                "assets/highlighting-tests/batch.bat",
                "assets/highlighting-tests/COMMIT_EDITMSG",
                "assets/highlighting-tests/diff.diff",
                "assets/highlighting-tests/json.json",
                "assets/highlighting-tests/powershell.ps1",
                "assets/highlighting-tests/yaml.yml",
            ],
        },
        {
