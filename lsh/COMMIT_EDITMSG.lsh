fn main() {
    /#/ {
        yield Comment;

        /\tdeleted:.*/ { yield BrightRed; }
        /\tmodified:.*/ { yield BrightBlue; }
        /\tnew file:.*/ { yield BrightGreen; }
        /\trenamed:.*/ { yield BrightBlue; }
    }

    /diff --git.*/ {
        yield BrightBlue;
        diff();
    }
}

fn diff() {
    /diff.*/ { yield BrightBlue; }
    /---.*/ { yield BrightBlue; }
    /\+\+\+.*/ { yield BrightBlue; }
    /-.*/ { yield BrightRed; }
    /\+.*/ { yield BrightGreen; }
}
